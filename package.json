{
  "name": "blk",
  "version": "1.1.0",
  "description": "A style guide",
  "author": "Brent Jackson",
  "license": "MIT",
  "style": "css/blk.css",
  "scripts": {
    "css": "cssnext src/blk.css css/blk.css",
    "css:min": "cssnext src/blk.css css/blk.min.css -c",
    "css:watch": "cssnext src/blk.css css/blk.css -w",
    "css:min:watch": "cssnext src/blk.css css/blk.min.css -c -w",
    "build": "node build",
    "build:watch": "onchange 'template.html' 'css/blk.min.css' -- npm run build",
    "serve": "http-server",
    "start": "npm run css:watch & npm run css:min:watch & npm run build:watch & npm run serve"
  },
  "devDependencies": {
    "basscss": "^6.1.4",
    "basscss-defaults": "^2.0.1",
    "colors.css": "^2.3.0",
    "cssnext": "^1.4.0",
    "cssstats": "latest",
    "filesize": "^3.1.2",
    "http-server": "^0.8.0",
    "lodash": "^2.4.1",
    "onchange": "^1.1.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jxnblk/blk.git"
  },
  "keywords": [
    "CSS",
    "Style guide",
    "OOCSS",
    "Basscss"
  ],
  "bugs": {
    "url": "https://github.com/jxnblk/blk/issues"
  },
  "homepage": "https://github.com/jxnblk/blk"
}
